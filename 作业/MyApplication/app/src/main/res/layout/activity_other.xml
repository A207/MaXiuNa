<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/aa"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr1"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="25sp"
        android:textSize="40sp"
        android:text="关于BMI"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr2"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="35sp"
        android:textSize="20dp"
        android:text="BMI（Body Mass Index）即身体质量指数是与体内脂肪总量密切相关的指标，主要反映全身性超重和肥胖。由于BMI计算的是身体脂肪的比例饿，所以在测量身体因超重而面临心脏病，高血压等风险上，比单纯的以体重来认定，更具准确性。"
        android:layout_below="@+id/adr1"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20sp"
        android:textSize="20dp"
        android:text="BMI的指数范围:"
        android:layout_below="@+id/adr2"
        android:layout_marginRight="20dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr4"
        android:layout_marginTop="10sp"
        android:textSize="20dp"
        android:text="小于18.5     偏瘦"
        android:layout_below="@+id/adr3"
        android:layout_gravity="center"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr5"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:text="18.5-25   正常"
        android:layout_below="@+id/adr4"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr6"
        android:layout_gravity="center"
        android:textSize="24dp"
        android:text="25-27     偏胖 "
        android:layout_below="@+id/adr5"
        android:gravity="center"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr7"
        android:layout_gravity="center"
        android:textSize="26dp"
        android:text="27-30   轻度肥胖"
        android:layout_below="@+id/adr6"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr8"
        android:layout_gravity="center"
        android:textSize="28dp"
        android:text="30-35   中度肥胖"
        android:layout_below="@+id/adr7"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/adr9"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="大于35   重度肥胖"
        android:layout_below="@+id/adr8"/>



</LinearLayout>